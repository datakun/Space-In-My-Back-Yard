	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Node via nodemon",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"program": "${workspaceFolder}/src/app.ts",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
